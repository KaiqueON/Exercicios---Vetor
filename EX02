Exercicios - Forma Invertida:

{
            int[] v = new int[10];

            for (int i=0; i<10; i++)
            {
                Console.WriteLine("Digite um numero: ");
                v[i] = int.Parse(Console.ReadLine());
            }
            Console.WriteLine("Forma Invertido: ");
            for (int i=9; i>=0; i--)
            {
                Console.WriteLine(v[i]);
            }
        }
    }
    
}
